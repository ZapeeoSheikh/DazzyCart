@model List<DazzyCart.Models.Products> 
@{
    ViewBag.Title = "Index";
}
@*<marquee behavior="alternate" style="color: #222222;">
        <h4>Welcome to the Dazzy Cart!</h4><h5>Thank you so much for choosing us</h5>
    </marquee>*@
<div class="mcarousel">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="display: flex; justify-content: center">
            <div class="item active">
                <img src="~/Images/1.png"/>
            </div>

            <div class="item">
                <img src="~/Images/2.png">
            </div>

            <div class="item">
                <img src="~/Images/3.png">
            </div>
            <div class="item">
                <img src="~/Images/4.png">
            </div>
            <div class="item">
                <img src="~/Images/5.png">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="mtime" style="margin: 0px 20px">
    <h5 style="color: #285584; float: left; font-size: 15px; font-weight: bold;">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</h5>
    <h5 style="color: #285584; float: right; font-size: 15px; font-weight: bold;">@DateTime.Now.ToString("hh:mm tt")</h5>
</div>
<br/>
<div class="maincard col-lg-12 col-md-12 col-xs-12 col-sm-12" style="background-color: aliceblue; margin-top: 10px; padding-bottom: 20px; padding-left: 0px; padding-right: 0px; padding-top: 20px;">
    <div class="maintext " style="margin-bottom: 30px; margin-left: 30px;">
        <h1 style="font-family: cursive; font-weight: bold">The Things</h1>
        <h2 style="color: #285584; font-family: cursive; font-weight: bold">you wanted to buy</h2>
    </div>


    @* Cards Start here *@
    <div class="col-lg-12">
        @foreach (var i in Model)
        {
            <div class="item  col-xs-12 col-md-4 col-lg-3 col-sm-6">
                <div class="thumbnail">
                    <img class="group list-group-image" src="~/dbImage/@i.Image" alt="" style="height: 240px"/>
                    <div class="category">
                        <h5 class="category-name">Devices</h5>
                    </div>
                    <div class="caption">
                        <h4 class="group inner list-group-item-heading" style="font-size: 18px; font-weight: bolder;">
                            @i.Name
                        </h4>
                        
                         <p class="group inner list-group-item-heading" style="font-size: 13px; padding-left: 15px;padding-right: 15px; ">
                           This Product is currently available. You can Place the Order by clicking the Whatsapp Icon. 
                        </p>
                        
                        
                        <div class="row" style="margin-top: 20px; display: flex; justify-content: center">
                            <div class="col-xs-12 col-md-6">
                                <p class="lead" style="">
                                    <i class="fa fa-money"></i>  @i.Price Rs
                                </p>
                            </div>
                        </div>

                       
                        
                        <div class="" style="float: right; height: 30px; width: 30px">
                            <a href="https://wa.me/923244812756?text=Hi%20M%20Rameez%20!%20I%20have%20came%20from%20Dazzy%20Cart%20and%20I%20want%20to%20purchase%20from%20your%20store."> <img src="~/Images/WhatsApp.png" height="30px" /></a>
                        </div>
                        <div class="btn-group" style="display: flex; justify-content: center">
                            <a class="btn btn-success" href="@i.Url">Get Link <i class="fa fa-link"></i></a>

                            <a class="btn btn-primary" href="\Home\ProductDetails\@i.Id">Details <i class="fa fa-caret-down"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-xs-12 col-md-12 col-lg-12 col-sm-12">
        <footer style="margin-top: 20px;">
            <div style="background-color: #BA9157; color: white; display: flex; height: 50px; justify-content: center;">
                <h4>Copyright &copy; by Muhammad Rameez </h4>
                <a href="https://github.com/ZapeeoSheikh" target="_blank">
                    <i class="fa fa-github" style="font-size: 24px; padding-left: 10px; padding-top: 8px;"></i>
                </a>
            </div>
        </footer>

    </div>
</div>