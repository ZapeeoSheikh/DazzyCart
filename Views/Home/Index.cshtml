<div class="mcarousel">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="display: flex; justify-content: center">
            <div class="item active">
                <img src="~/Images/1.png"/>
            </div>

            <div class="item">
                <img src="~/Images/2.png">
            </div>

            <div class="item">
                <img src="~/Images/3.png">
            </div>
            <div class="item">
                <img src="~/Images/4.png">
            </div>
            <div class="item">
                <img src="~/Images/5.png">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="mtime" style="margin: 0px 30px">
    <h5 style="color: #F73B00; float: left; font-family: cursive; font-weight: bold;">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</h5>
    <h5 style="color: #F73B00; float: right; font-family: cursive; font-weight: bold;">@DateTime.Now.ToString("hh:mm tt")</h5>
</div>
<br/>
<div class="maincard col-lg-12" style="background-color: aliceblue; margin-top: 10px; padding-bottom: 20px; padding-left: 0px; padding-right: 0px; padding-top: 20px;">
    <div class="maintext " style="margin-bottom: 30px; margin-left: 30px;">
        <h1 style="font-family: cursive; font-weight: bold">The Things</h1>
        <h2 style="color: #285584; font-family: cursive; font-weight: bold">you want to buy</h2>
    </div>


    @* Cards Start here *@

    <div class="col-lg-12">





        @foreach (var i in Model)
    {

        <div class="item  col-xs-4 col-md-3">
            <div class="thumbnail" >
                <img class="group list-group-image" src="~/dbImage/@i.Image" alt="" style="border-bottom: 2px solid #285584; height: 240px"/>
                <div class="category">
                    <h5 class="category-name">Devices</h5>
                </div>
                <div class="caption">
                    <h4 class="group inner list-group-item-heading" style="font-weight: bolder">
                        @i.Name</h4>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead" style="font-family:monospace">
                                @i.Price Rs</p>
                        </div>
                        <div class="btn-group">
                            <a class="btn btn-success" href="@i.Url">Get Link </a>
                        </div>
                            <a class="btn btn-primary" href="\Home\ProductDetails\@i.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>

    }
        
        
        
        
        
        
        
        
        

        
        
        
        


